{
	"name": "ddui",
	"displayName": "DDUI Example",
	"version": "0.0.1",
	"private": true,
	"description": "Example interface for DDUI in React",
	"license": "MIT",
	"author": {
		"name": "Charles F. Munat",
		"email": "charles.munat@gmail.com"
	},
	"type": "module",
	"types": "types.d.ts",
	"scripts": {
		"build": "vite build",
		"build:all": "pnpm run fmt && pnpm run lint && pnpm run clean && vite build",
		"clean": "rimraf ./dist",
		"commit": "git add --all && pnpm lint && pnpm fmt && git commit",
		"dev": "vite --port 8082",
		"fmt": "dprint fmt -c ./dprint.json \"**/*.{ts,tsx,js,jsx,json}\"",
		"lint": "deno lint src/",
		"serve": "vite preview --port 8082",
		"show:cov": "open ./coverage/index.html",
		"test": "vitest --dir src/",
		"test:cov": "vitest run --coverage --dir src/",
		"test:e2e": "pnpx playwright test && pnpx playwright show-report",
		"unimp": "pnpx unimported"
	},
	"dependencies": {
		"@formatjs/intl-getcanonicallocales": "^2.0.1",
		"@formatjs/intl-listformat": "^7.0.1",
		"@formatjs/intl-locale": "^3.0.1",
		"@js-temporal/polyfill": "^0.4.1",
		"@xstate/react": "^3.0.0",
		"cross-fetch": "^3.1.5",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"uuid": "^8.3.2",
		"xstate": "^4.32.1"
	},
	"devDependencies": {
		"@playwright/test": "^1.22.2",
		"@testing-library/dom": "^8.13.0",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.3.0",
		"@testing-library/user-event": "^14.2.0",
		"@types/babel__core": "^7.1.19",
		"@types/node": "^17.0.36",
		"@types/react": "^18.0.9",
		"@types/react-dom": "^18.0.5",
		"@types/uuid": "^8.3.4",
		"@types/ws": "^8.5.3",
		"@vitejs/plugin-react": "^1.3.2",
		"c8": "^7.11.3",
		"deep-diff": "^1.0.2",
		"identity-obj-proxy": "^3.0.0",
		"jsdom": "^19.0.0",
		"module-alias": "^2.2.2",
		"msw": "^0.41.1",
		"rimraf": "^3.0.2",
		"ts-node": "^10.8.0",
		"typescript": "^4.7.2",
		"typescript-plugin-css-modules": "^3.4.0",
		"vite": "^2.9.9",
		"vite-aliases": "^0.9.2",
		"vitest": "^0.12.9",
		"ws": "^8.7.0"
	},
	"_moduleAliases": {
		"~getComponent/*": "src/modules/getComponent/*",
		"~icons/*": "src/modules/icons/*",
		"~services/*": "src/services/*",
		"~setup/*": "setup/*",
		"~utilities/*": "src/utilities/*",
		"~/*": "src/*"
	}
}
